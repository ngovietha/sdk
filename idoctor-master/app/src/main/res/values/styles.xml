<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PrimaryEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_size_normal</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingStart">@dimen/element_spacing_large</item>
        <item name="android:paddingEnd">@dimen/element_spacing_large</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/element_spacing_normal</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleTextView" parent="@style/PrimaryTextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="listlayouttext">
        <item name="android:textColor">#6f6f6f</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="home_shad">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowColor">#000</item>
    </style>

    <style name="playback_child_item_shad">
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowColor">#000</item>
    </style>

    <style name="main_menu">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="home_item">
        <item name="android:textColor">@color/main_item_text_focus</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="listview_item_text">
        <item name="android:textColor">@color/main_item_text_focus</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="realplay_data_big">
        <item name="android:gravity">center</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="realplay_data_small">
        <item name="android:gravity">center</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="realplay_info">
        <item name="android:textColor">#555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center|right</item>
    </style>

    <style name="main_menu_item_0">
        <item name="android:textColor">#929292</item>
        <item name="android:textSize">14sp</item>
        <!--         <item name="android:background">@drawable/main_menu_item</item> -->
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="main_menu_item_1">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <!--         <item name="android:background">@drawable/main_menu_item</item> -->
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="set_item_0">
        <item name="android:textColor">#7a7a7a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="set_item_1">
        <item name="android:textColor">#222</item>
        <item name="android:textSize">16sp</item>
        <!--         <item name="android:background">@drawable/setting_item</item> -->
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="datamanager_text">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="user_register_text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_horizontal|right</item>
    </style>

    <style name="dialog_bg">
        <!--         <item name="android:background">@drawable/dialogbg_color</item> -->
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:background">#00000000</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme_dialog" parent="android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="selectorDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <!--         <item name="android:windowBackground">@drawable/selector_dialog_bg</item> -->
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="pb_child_time">
        <item name="android:textColor">#0b9acf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="pb_child_title">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="play_info">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="user_info_text">
        <item name="android:textColor">#363636</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="user_info_edit">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20sp</item>
        <!--         <item name="android:background">@drawable/editnoborder</item> -->
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

</resources>
